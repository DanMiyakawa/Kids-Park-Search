<% if comment.good_by?(current_customer) %>
  <%= link_to park_comment_goods_path(park, comment), method: :delete, remote: true, class: "good-link" do %>
    <%= image_tag "good.png", size: "30" %><%= comment.goods.size %>
  <% end %>
<% else %>
  <%= link_to park_comment_goods_path(park, comment), method: :post, remote: true, class: "good-link" do %>
    <%= image_tag "good-line.png", size: "30" %><%= comment.goods.size %>
  <% end %>
<% end %>