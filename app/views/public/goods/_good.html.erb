<% if comment.good_by?(current_customer) %>
  <%= link_to park_comment_goods_path(park, comment), method: :delete, remote: true do %>
    <%= image_tag "star.png", size: "50" %>
  <% end %>
<% else %>
  <%= link_to park_comment_goods_path(park, comment), method: :post, remote: true do %>
    <%= image_tag "star-line.png", size: "50" %>
  <% end %>
<% end %>