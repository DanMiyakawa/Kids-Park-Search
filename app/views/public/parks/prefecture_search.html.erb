<div class='container mb-5'>
  <div class="row">
    <span class="col-sm-12 col-md-4 text-center"><%= image_tag "tree.png" %></span>
    <h2 class="col-sm-12 col-md-4 text-center mt-4"><strong><%= @name %>の遊び場</strong></h2>
    <span class="col-sm-12 col-md-4 text-center"><%= image_tag "tree.png" %></span>
  </div>
  <div class="row mt-4">
    <%= search_form_for @q, url: search_parks_path, class: "col-12 text-center" do |f| %>
      <%= f.collection_select :address_cont, JpPrefecture::Prefecture.all, :name, :name, { selected: @name, prompt: '都道府県を選択' } %> ×
      <%= f.search_field :name_or_address_cont, placeholder: "住所またはキーワードを入力", size: "50×5" %> ×
      <%= f.collection_select :genre_id_eq, Genre.all, :id, :name, { prompt: 'ジャンルを選択' } %>
      <%= f.submit '検索' %>
    <% end %>
  </div>
  <div class="row mx-auto mb-5">
    <% if @prefectures.exists? %>
      <%= render "public/parks/map", parks: @prefectures %>
      <%= render "public/parks/api" %>
    <% else %>
      <div class="col-12">
        <h2 class="mt-5 mb-5 text-center">該当の遊び場はありません</h2>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-12 mt-3v"><%= paginate @prefectures, theme: 'bootstrap-5' %></div>
  </div>
</div>