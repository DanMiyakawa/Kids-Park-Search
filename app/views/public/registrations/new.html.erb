<div class="container">
  <h2 class="text-center mt-4"><strong>新規会員登録</strong></h2>
  <div class="row">
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
      <div class="row">
        <div class="col-md-12 d-flex justify-content-center">
          <table class="table　table-borderless table-sm">
            <div class="field">
              <tr>
                <th><%= f.label :ニックネーム %></th>
                <td></td>
                <td><%= f.text_field :nickname %></td>
              </tr>
            </div>
          <div class="field">
            <tr>
              <th><%= f.label :"メールアドレス" %></th>
              <td></td>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
            </tr>
          </div>

          <div class="field">
            <tr>
              <th><%= f.label :"パスワード" %>
                <% if @minimum_password_length %>(<%= @minimum_password_length %>文字以上)</th>
                <% end %>
              <td></td>
              <td><%= f.password_field :password, autocomplete: "new-password" %></td>
            </tr>
          </div>

          <div class="field">
            <tr>
              <th><%= f.label :"パスワード(確認用)" %></th>
              <td></td>
              <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
            </tr>
          </div>

          <div class="actions">
            <td></td>
            <td></td>
            <td><%= f.submit "新規登録", class: "btn btn-secondary btn-success" %></td>
          </div>
        </table>
      </div>
    </div>
    <% end %>

    <div class="row">
      <div class="col-12">
        <h6 class="text-center">既に登録済みの方<%= link_to "こちら", customer_session_path %> からログインしてください。</h6>
      </div>
    </div>
  </div>
</div>