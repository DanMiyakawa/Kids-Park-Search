<div class="row justify-content-around">
<% park_comments.each do |comment| %>
  <div class="col-sm-12 col-md-6 list">
    <% if comment.score > 0 %>
      <table class="mt-3" style="width: 100%; background-color: #f7cf9e;">
        <tr>
          <th class="text-center" width="20%">
            <%= image_tag 'boy_1.png', size: "80" %><br>
          </th>
          <%= render "public/comments/comment_table", park: park, comment: comment %>
        </tr>
      </table>
    <% elsif comment.score < 0 %>
      <table class="mt-3" style="width: 100%; background-color: #c9f5f3;">
        <tr>
          <th class="text-center" width="20%">
            <%= image_tag 'boy_2.png', size: "80" %><br>
          </th>
          <%= render "public/comments/comment_table", park: park, comment: comment %>
        </tr>
      </table>
    <% else %>
      <table class="mt-3" style="width: 100%; background-color: white;">
        <tr>
          <th class="text-center" width="20%">
            <%= image_tag 'boy_03.png', size: "80" %><br>
          </th>
          <%= render "public/comments/comment_table", park: park, comment: comment %>
        </tr>
      </table>
    <% end %>
  </div>
<% end %>
</div>