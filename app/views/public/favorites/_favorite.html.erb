<% if park.favorited_by?(current_customer) %>
  <%= link_to park_favorites_path(park), method: :delete, remote: true do %>
    <%= image_tag "star.png", size: "50" %>
  <% end %>
<% else %>
  <%= link_to park_favorites_path(park), method: :post, remote: true do %>
    <%= image_tag "star-line.png", size: "50" %>
  <% end %>
<% end %>