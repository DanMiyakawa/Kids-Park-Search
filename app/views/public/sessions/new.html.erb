<div class="container">
  <h2 class="text-center mt-4"><strong>ログイン</strong></h2>
  <% if flash[:alert] %>
    <div class="flash alert alert-danger text-center"><%= flash[:alert] %></div>
  <% end %>
  <div class="row">
    <div class="col-5 px-0 mx-auto">

        <%= form_with model: @customer, url: customer_session_path do |f| %>
        <div class="text-center">
         <%= render "public/shared/error_messages", resource: resource %>
        </div>
         <div class="field">
          <%= f.label "メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: "sample@example.com" %>
         </div>

         <div class="field">
          <%= f.label "パスワード" %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
         </div>
         <br>

         <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary", style: 'display: block; margin:0 0 0 auto;' %>
         </div>
       <% end %>

      <div class="row mt-5 mb-2">
       <h6 class="text-center" style="background-color:#EEEEEE">会員登録がお済みでない方<%= link_to "こちら", new_customer_registration_path %>から新規登録を行ってください。</h6>
      </div>
    </div>
  </div>
</div>