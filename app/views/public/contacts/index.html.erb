<div class='container-fluid'>
  <div class="row mt-3">
    <span class="col-sm-12 col-md-4 text-center"><%= image_tag "kumo.png" %></span>
    <h2 class="col-sm-12 col-md-4 text-center"><strong>お問い合わせ一覧</strong></h2>
    <span class="col-sm-12 col-md-4 text-center"><%= image_tag "kumo.png" %></span>
  </div>
  <div class="row-fluid">
    <div class="col-sm-10 col-md-10 col-lg-8 mx-auto">
      <div class="text-right">
        <%= link_to "新規お問い合わせ", new_contact_path %>
      </div>
      <table class="table mt-4">
        <thead class="table-active">
          <tr>
            <th width="15%">問い合わせ日時</th>
            <th width="20%">タイトル</th>
            <th>内容</th>
            <th width="10%">対応状況</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @contacts.each do |contact| %>
          <tbody>
            <tr>
              <td><%= contact.created_at.strftime('%m月%d日') %></td>
              <td><%= contact.title %></td>
              <td style="word-break : break-all;"><%= contact.body %></td>
              <td><%= contact.status %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row-fluid">
    <div class="col-12 mt-3"><%= paginate @contacts, theme: 'bootstrap-5' %></div>
  </div>
</div>