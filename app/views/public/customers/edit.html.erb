<div class='container'>
  <h2 class="text-center mt-4"><%= image_tag "flag.png" %><strong>ユーザー情報編集</strong><%= image_tag "flag.png" %></h2>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <%= form_with model:@customer, local:true do |f| %>
      <div class="form-group">
        <%= f.label "ニックネーム" %>
        <%= f.text_field :nickname, class: "form-control nickname" %>
      </div>
     <div class="form-group">
        <%= f.label "プロフィール画像" %>
        <%= f.file_field :profile_image, class: "form-control-file profile_image", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.label "自己紹介" %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit "更新", class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>
