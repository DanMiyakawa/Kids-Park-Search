<div class='container'>
  <div class="row">
    <span class="col-sm-12 col-md-4 text-center"><%= image_tag "flag.png" %></span>
    <h2 class="col-sm-12 col-md-4 text-center mt-4"><strong>ユーザー情報編集</strong></h2>
    <span class="col-sm-12 col-md-4 text-center"><%= image_tag "flag.png" %></span>
  </div>
  <div class="text-center">
    <%= render 'layouts/errors', obj: @customer %>
  </div>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <%= form_with model:@customer, local:true do |f| %>
      <div class="form-group">
        <%= f.label "ニックネーム" %>
        <%= f.text_field :nickname, class: "form-control nickname" %>
      </div>
       <div class="form-group">
        <%= f.label "プロフィール画像" %>
        <%= f.file_field :profile_image, class: "form-control-file profile_image", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.label "自己紹介" %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
      <div class="form-group text-right mt-3">
        <%= f.submit "更新", class: 'btn btn-success' %>
      </div>
    <% end %>
    </div>
  </div>
</div>
