<div class="container">
  <h2 class="text-center mt-4"><%= image_tag "flag.png" %><strong>マイページ</strong><%= image_tag "flag.png" %></h2>
  <div class="row">
    <div class="col-5 mt-5">
      <%= image_tag @customer.get_profile_image, size:'200x200', class: "mx-auto", style: "border-radius: 50%; width: 200px; height: 200px; object-fit:cover; display: block; margin: auto;" %>
      <table class="table table-borderless">
        <tr>
          <th>ニックネーム</th><td><%= @customer.nickname %></td>
        </tr>
        <tr>
          <th>紹介文</th><td><%= @customer.introduction %></td>
        </tr>
      </table>
      <% if @customer == current_customer %>
        <%= link_to edit_customer_path(@customer), class: "btn btn-outline-secondary btn-block" do %>
          編集する
        <% end %>
        <%= link_to unsubscribe_customers_path, class: "btn btn-outline-danger btn-block" do %>
          退会する
        <% end %>
        <%= link_to contacts_path, class: "btn btn-outline-secondary btn-block" do %>
        お問い合わせ一覧
        <% end %>
      <% end %>
    </div>
    <div class="col-6 offset-1">
      <h3 class="text-center">過去に投稿した遊び場</h3>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>遊び場名</th>
            <th>住所</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @parks.each do |park| %>
          <tr>
            <td><%= link_to park.name, park_path(park.id) %></td>
            <td><%= park.address %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <div class="col-6 offset-1 mt-3"><%= paginate @parks, theme: 'bootstrap-5' %></div>
    </div>
  </div>
</div>