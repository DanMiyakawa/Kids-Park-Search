<div class="container">
  <div class="row">
    <span class="col-sm-12 col-md-4 text-center"><%= image_tag "flag.png" %></span>
    <h2 class="col-sm-12 col-md-4 text-center mt-4"><strong>マイページ</strong></h2>
    <span class="col-sm-12 col-md-4 text-center"><%= image_tag "flag.png" %></span>
  </div>
  <div class="row mb-3">
    <div class="col-md-12 col-lg-5 mt-5">
      <%= image_tag @customer.get_profile_image, size:'200x200', class: "mx-auto", style: "border-radius: 50%; width: 200px; height: 200px; object-fit:cover; display: block; margin: auto;" %>
      <table class="table table-borderless">
        <tr>
          <th>ニックネーム</th><td><%= @customer.nickname %></td>
        </tr>
        <tr>
          <th>メールアドレス</th><td><%= @customer.email %></td>
        </tr>
      </table>
      <!--ゲストユーザーでは表示させない-->
      <% if @customer == current_customer && @customer.nickname!= "ゲストユーザー" %>
        <%= link_to edit_customer_path(@customer), class: "btn btn-outline-secondary btn-block" do %>
          編集する
        <% end %>
        <%= link_to unsubscribe_customers_path, class: "btn btn-outline-danger btn-block" do %>
          退会する
        <% end %>
        <%= link_to contacts_path, class: "btn btn-outline-secondary btn-block" do %>
        お問い合わせ一覧
        <% end %>
      <% end %>
    </div>
    <div class="col-md-12 col-lg-5 offset-lg-1">
      <h3 class="text-center mt-3">過去に投稿した遊び場(全<%= @customer_count.count %>件)</h3>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>遊び場名</th>
            <th>住所</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @parks.each do |park| %>
          <tr>
            <td><%= link_to park.name, park_path(park.id), 'data-turbolinks': false %></td>
            <td><%= park.address %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <div class="col-6 offset-1 mt-3"><%= paginate @parks, theme: 'bootstrap-5' %></div>
    </div>
  </div>
</div>