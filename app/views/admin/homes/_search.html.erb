<h2 class="text-center mt-4"><strong>〜お問い合わせ一覧(全<%= @all_contact.size %>件)〜</strong></h2>
<div class="text-right">
  <% Contact.statuses.keys.each do |status| %>
    <%= link_to status, admin_path(status: status), remote: true, class: "btn btn-outline-secondary" %>
  <% end %>
  <%= link_to "全件表示", admin_path, remote: true, class: "btn btn-outline-secondary" %>
</div>
<table class="table mt-2 admin-table mb-2">
  <thead class="table-active">
    <tr>
      <th>お問い合わせ日時</th>
      <th>タイトル</th>
      <th>対応状況</th>
      <th></th>
    </tr>
  </thead>
<% contacts.each do |contact| %>
  <tbody>
    <tr>
      <td><%= contact.created_at.strftime('%Y年%m月%d日%H時%M分') %></td>
      <td><%= contact.title %></td>
      <td><%= contact.status %></td>
      <td><%= link_to "詳細", admin_contact_path(contact), class: "btn btn-sm btn-primary" %></td>
    </tr>
  </tbody>
<% end %>
</table>
<div class="mt-3 mx-auto mb-5"><%= paginate contacts, theme: 'bootstrap-5', :param_name => 'contact', remote: true %></div>