<%= render "layouts/flash" %>
<h2 class="text-center mt-4"><strong>〜お問い合わせ詳細〜</strong></h2>
<div class="row-fluid mb-5">
  <div class="col-sm-12 col-md-10 col-lg-8 mx-auto">
    <%= form_with model: @contact, url: admin_contact_path, method: :patch, local: true do |f| %>
    <table class="table admin-table">
      <tr>
        <th class="table-active", width="20%">タイトル</th>
        <td><%= @contact.title %></td>
      </tr>
      <tr>
        <th class="table-active">内容</th>
        <td class="contact-body"><%= @contact.body %></td>
      </tr>
      <tr>
        <th class="table-active">質問者</th>
        <td><%= link_to admin_customer_path(@contact.customer) do %><%= @contact.customer.nickname %><% end %></td>
      </tr>
      <tr>
        <th class="table-active">連絡先</th>
        <td><%= @contact.customer.email %></td>
      </tr>
      <tr>
        <th class="table-active">対応状況</th>
        <td>
          <%= f.select :status, Contact.statuses.keys %>
        </td>
      </tr>
      <tr>
        <th class="table-active">対応メモ</th>
        <td><%= f.text_area :memo, placeholder: "対応メモ", class: "memo-form" %>
          <%= f.submit "更新", class: "btn btn-success contact-btn" %>
        </td>
      </tr>
    </table>
    <% end %>
  </div>
</div>