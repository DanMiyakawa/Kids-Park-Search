<div class="container">
  <h2 class="text-center mt-4"><strong>〜ジャンル一覧・追加〜</strong></h2>
  <div class="row">
    <div class="col-7 mx-auto">
      <%= form_with model:@genre,url: admin_genres_path, local:true do |f| %>
      <p class="my-5 mx-2">ジャンル名
          <%= f.text_field :name, class: "mx-2" %>
          <%= f.submit '新規登録', class: "btn btn-success mx-2" %>
        </p>
      <% end %>

      <table class="table", style="border: 1px solid black;">
        <thead>
          <tr>
            <th class="table-active" style="border: 1px solid black;">ジャンル</th>
            <th class="table-active" style="border: 1px solid black;"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= genre.name %>
              </td>
              <td>
                <%= link_to "編集する", edit_admin_genre_path(genre.id) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
