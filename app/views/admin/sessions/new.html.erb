<div class="container">
  <h2 class="text-center mt-4"><strong>〜管理者ログイン〜</strong></h2>
  <div class="row">
    <div class="col-5 px-0 mx-auto">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field form-group">
          <%= f.label "メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: "sample@example.com" %>
        </div>

        <div class="field">
          <%= f.label "パスワード" %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
        </div>
        <br>
        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary mb-4", style: 'display: block; margin:0 0 0 auto;' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
